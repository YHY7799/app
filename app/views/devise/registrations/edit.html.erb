<div style="text-align: right;">

  <h2> تعديل الحساب</h2>
  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"البريد الإلكتروني" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <br>
    <div class="field">
     
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:" كلمة المرور الجديدة" %>
   
      
        <em>  الحد الأدنى هو ٦ رموز</em>

    </div>

    <div class="field">
      
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control", placeholder:"تأكيد كلمة المرور" %>
    </div>

    <div class="field">
     <br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder:"كلمة المرور الحالية " %>
    </div>
    <br>

    <div class="actions">
      <%= f.submit "تعديل", class:"btn btn-success" %>
    </div>
  <% end %>



  <p> <%= button_to  "حذف الحساب", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %>

  <%= link_to "تسجيل الخدوج", destroy_user_session_path, method: :delete, class:"btn btn-outline-danger btn-sm" %> 


  
</div>

