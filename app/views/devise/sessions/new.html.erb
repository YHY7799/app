<div style="text-align: right;" >

  <h2> تسجيل الدخول</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} } ) do |f| %>

    <div class="field">
    
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"البريد الإلكتروني " %>
    </div>
    <br>
    <div class="field">
      
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:" كلمة المرور"%>
    </div>
    <br>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>  
        <h6>تذكرني</h6>
      
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "تسجيل الدخول", class:"btn btn-primary" %>
      <br> <br>
      <%= link_to "الرئيسية", root_path, class:"btn btn-outline-primary" %> 
    </div>
  <% end %>
  

  <%= render "devise/shared/links" %>
</div>
